<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#3B5998"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:padding="10px"
        android:text="Main Page"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:typeface="monospace" >
    </TextView>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:gravity="center"
        android:layout_weight="0"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/generate_signature_btn"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_margin="20px"
                android:layout_weight="0"
                android:text="Generate new Signature"
                android:typeface="monospace" />

            <Button
                android:id="@+id/share_signature_btn"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_margin="20px"
                android:layout_weight="0"
                android:text="Share existing Signature"
                android:typeface="monospace" />

            <Button
                android:id="@+id/send_sms_btn"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_margin="20px"
                android:layout_weight="0"
                android:text="Send Secure SMS"
                android:typeface="monospace" />

            <Button
                android:id="@+id/read_sms_btn"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20px"
                android:layout_weight="0"
                android:text="Read Secure SMS"
                android:typeface="monospace" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>